@model Autoriza.ViewModels.LoginView

@{
    ViewBag.Title = "Login";
}

<h2>@Model.Sistema.Nome</h2>

@using (Html.BeginForm("Login","Login", FormMethod.Post, null)) 
{
    <div class="form-horizontal">
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        
        @Html.HiddenFor(model => model.Sistema.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Usuario.Login, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Usuario.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Usuario.Login, "", new { @class = "text-danger" })
            </div>
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.Usuario.Senha, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Usuario.Senha, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Usuario.Senha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
